<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane fx:controller="automatic.click.App"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="10" right="40" bottom="40" left="40"/></padding>
         <Label text="Click below to automate click">
    		</Label>  
    		  <Button fx:id="clickButton" text="Start"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
            GridPane.halignment="LEFT"
            onAction="#startCommand">
    		</Button>
    		
    		    		  <Button fx:id="cancelButton" text="Cancel"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            GridPane.halignment="RIGHT"
            onAction="#stopCommand">
    		</Button>
</GridPane>